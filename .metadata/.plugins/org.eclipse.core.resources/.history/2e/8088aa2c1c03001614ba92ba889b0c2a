import unittest

class BinarySearch:
    def __init__(self):
        print "Object Created !"
        
    def iterative(self, array, key):
        left = 0
        right = len(array)-1
        while left <= right:
            
            mid = (left + right)/2
            
            if array[mid] == key:
                return True
            elif array[mid] > key:
                left = mid+1
            else:
                right = mid-1
                
            if left > right:
                return False
    
    def recursive(self, array, key):
        left = 0
        right = len(array)-1
        
class Testing(unittest.TestCase):
    def test_positive(self):
        print "running test"
        
if __name__ == "__main__":
    unittest.main()